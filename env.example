# =============================================================================
# CIRCLE PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Скопируйте этот файл в .env и заполните актуальными значениями

# -----------------------------------------------------------------------------
# Django Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=circles.uz,www.circles.uz,localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_NAME=circle_db
DB_USER=circle_user
DB_PASSWORD=your-strong-database-password
DB_HOST=db
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=your-redis-password
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Django Superuser (will be created on first run)
# -----------------------------------------------------------------------------
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@circles.uz
DJANGO_SUPERUSER_PASSWORD=your-admin-password

# -----------------------------------------------------------------------------
# Initial Data Loading
# -----------------------------------------------------------------------------
LOAD_INITIAL_DATA=true

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_NAME=your_bot_name
TELEGRAM_WEBHOOK_URL=https://circles.uz/api/telegram/webhook/
NEXT_PUBLIC_TELEGRAM_BOT_NAME=your_bot_name

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://circles.uz/api/v1
NODE_ENV=production

# -----------------------------------------------------------------------------
# Email Configuration (optional)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Circle <noreply@circles.uz>

# -----------------------------------------------------------------------------
# File Storage (optional - для AWS S3)
# -----------------------------------------------------------------------------
# USE_S3=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=circle-media
# AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# Monitoring & Analytics (optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn-url
# GOOGLE_ANALYTICS_ID=GA-XXXXX-X

# -----------------------------------------------------------------------------
# SSL Configuration (для будущего использования)
# -----------------------------------------------------------------------------
# SSL_CERTIFICATE_PATH=/etc/ssl/certs/circles.uz.crt
# SSL_PRIVATE_KEY_PATH=/etc/ssl/private/circles.uz.key

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# -----------------------------------------------------------------------------
# Performance & Scaling
# -----------------------------------------------------------------------------
GUNICORN_WORKERS=4
CELERY_WORKERS=4
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=4096 