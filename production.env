# =============================================================================
# CIRCLE PRODUCTION ENVIRONMENT VARIABLES (без Docker)
# =============================================================================
# Скопируйте этот файл в /var/www/circle/.env на сервере

# -----------------------------------------------------------------------------
# Django Configuration
# -----------------------------------------------------------------------------
DJANGO_SETTINGS_MODULE=circle.settings_production
SECRET_KEY=your-super-secret-key-here-change-this-in-production-50-chars
DEBUG=False
ALLOWED_HOSTS=circles.uz,www.circles.uz,your-server-ip

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_NAME=circle_db
DB_USER=circle_user
DB_PASSWORD=your-strong-database-password
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://your-server-ip:8000/api/v1
# После настройки домена:
# NEXT_PUBLIC_API_URL=https://circles.uz/api/v1

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_NAME=your_bot_name
TELEGRAM_WEBHOOK_URL=https://circles.uz/api/telegram/webhook/
NEXT_PUBLIC_TELEGRAM_BOT_NAME=your_bot_name

# -----------------------------------------------------------------------------
# Email Configuration (optional)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Circle <noreply@circles.uz>

# -----------------------------------------------------------------------------
# SSL/HTTPS Configuration
# -----------------------------------------------------------------------------
USE_TLS=False
# После настройки SSL установите в True:
# USE_TLS=True

# -----------------------------------------------------------------------------
# Performance & Scaling
# -----------------------------------------------------------------------------
GUNICORN_WORKERS=4
CELERY_WORKERS=4 